@model IEnumerable<MoonlayStore.Models.Product>

@{
    ViewData["Title"] = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() > 0)
{
    <h2>Product List</h2>

    <p>
        @*<a asp-action="Create">Create New</a>*@
    </p>

    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="thumbnail">
                    <img src="@Html.DisplayFor(modelItem => item.images[0])" alt="...">
                    <div class="caption">
                        <h3>@Html.DisplayFor(modelItem => item.title)</h3>
                        <p>@Html.DisplayFor(modelItem => item.description)</p>
                        <p>
                            <div class="row">
                                <div class="col-md-6">
                                    <a href="@Url.Action("Detail", "Product", new { id = item.asin })" class="" role="button">Detail</a>
                                </div>
                                <div class="col-md-6">
                                    @Html.DisplayFor(modelItem => item.prices.currency)
                                    <span style="text-decoration-line:line-through">@Html.DisplayFor(modelItem => item.prices.previous_price)</span>
                                    <label style="color:red;">@Html.DisplayFor(modelItem => item.prices.current_price)</label>
                                </div>
                            </div>

                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h2 class="text-center">Product not found</h2>
}


